<%= layout("layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <div class="col-8 offset-3">
        <form action="/signup" method="POST" novalidate class="needs-validation">
            <h1 class="col-8 offset-2"><u>SignUp for WanderLust</u></h1>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" type="text" class="form-control" required>
                <div class="invalid-feedback"><b>Provide a valid Username</b></div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" id="email" type="text" class="form-control" required>
                <div class="invalid-feedback"><b>Provide a valid Email</b></div>
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label">Password</label>
                <input name="Password" id="Password" type="password" class="form-control" required>
                <div class="invalid-feedback"><b>Provide a valid Password</b></div>
            </div>
            <button class="btn btn-success">Save</button>

        </form>
</div>
</div>